@model DemoGit.Domain.Entities.Usuario
@{
    ViewData["Title"] = "Esqueci minha senha";
}

<h1>Esqueci minha senha</h1>
<br/>
@using(Html.BeginForm("EsqueciSenha", "Login", FormMethod.Post))
{
    <div class="row">
        @Html.ValidationMessage("ErroLoginEsqueciSenha", new {style = "color: red;"})
    </div>
    <div class="row">
        <h4>Digite o nome do usuário do qual você esqueceu a senha</h4>
    </div>
    <div class="row">
        <div class="col-6">
            @Html.ValidationMessageFor(u => u.Username, null, new {style="color: red;"})
            <br/>
            @Html.EditorFor(u => u.Username, new {htmlAttributes = new {@class = "form-control", required = true}})
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-3">
            <input type="submit" value="Enviar E-mail" class="btn btn-success"/>
            <input type="button" class="btn btn-light" value="Voltar" onclick="location.href='@Url.Action("Index", "Login")'" />
        </div>
    </div>
}